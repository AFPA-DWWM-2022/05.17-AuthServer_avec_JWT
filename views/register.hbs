<html>

<head>
    <meta charset='utf-8' />

    <title>.Register.</title>

    <link description"Import Bootstrap styles"
        href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet'
        integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous' />

    <link rel='stylesheet' type='text/css' href='/css/style.css' />

</head>


<body>
    <nav>
        <h4>LOGO</h4>
        <ul>
            <li><a href='/'>Home</a></li>
            <li><a href='/login'>Login</a></li>
            <li><a href='/register'>Register</a></li>
        </ul>
    </nav>

    <div class='container mt-4'>
        <div class='card'>
            <div class='card-header'>
                Register Form
            </div>

            <div class='card-body'>
                <form action='/auth/register' method='post'>
                    <div class='mb-3'>
                        <label for='name' class='form-label'>Name:</label>
                        <input type='text' class='form-control' name='name' required />
                    </div>
                    <div class='mb-3'>
                        <label for='email' class='form-label'>Email address:</label>
                        <input type='email' class='form-control' name='mail' required />
                    </div>
                    <div class='mb-3'>
                        <label for='password' class='form-label'>Password:</label>
                        <input type='password' class='form-control' name='pass' required />
                    </div>
                    <div class='mb-3'>
                        <label for='passwordConfirm' class='form-label'>Confirm password:</label>
                        <input type='password' class='form-control' name='check' required />
                    </div>
                    <button type='submit' class='btn btn-primary'>Register</button>
                </form>
            </div>

        </div>
        {{#if error}}
        <h4 class="alert alert-danger mt-4">{{error}}</h4>
        {{/if}}
        {{#if message}}
        <h4 class='alert alert-success mt-4'>{{message}}</h4>
        {{/if}}
    </div>

    <script description="Import Bootstrap core"
        src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
        integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
        crossorigin='anonymous'></script>

</body>

</html>
